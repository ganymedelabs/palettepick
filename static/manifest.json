{
    "manifest_version": 3,
    "name": "PalettePick",
    "author": "ganemedelabs",
    "version": "1.0.0",
    "description": "Highlights color strings (e.g., hex, RGB, HSL) on webpages, with each color highlighted in its own color.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],

    "action": {
        "default_title": "Colorize Strings",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "background": {
        "service_worker": "serviceWorker.bundle.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.bundle.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["popup.bundle.js", "images/icon-48.png", "images/icon-48-disabled.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": { "16": "images/icon-16.png", "48": "images/icon-48.png", "128": "images/icon-128.png" }
}
